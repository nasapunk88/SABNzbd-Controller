<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="6dp">

    <TextView
        android:id="@+id/speed_limit_value_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Value (KB/s):"
        android:textAppearance="@android:style/TextAppearance.Small"/>

    <EditText
        android:id="@+id/speed_limit_value"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speed_limit_value_label"
        android:inputType="numberDecimal"/>

    <Button
        android:id="@+id/speed_limit_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/speed_limit_value_label"
        android:layout_toRightOf="@+id/speed_limit_value"
        android:text="OK" />

</RelativeLayout>