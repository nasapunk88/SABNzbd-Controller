<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <CheckBox
        android:id="@+id/remote_queue_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:focusable="false"/>     
        
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="vertical"
        android:padding="6dp">
        
		    <TextView android:id="@+id/remote_queue_row_filename"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="Sample Filename"
		        android:textColor="@color/black"
		        android:textAppearance="@android:style/TextAppearance.Medium"/>        
    
		    <TextView android:id="@+id/remote_queue_row_progress"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:text="downloaded size / total size"
		        android:textColor="@color/black"
		        android:textAppearance="@android:style/TextAppearance.Small"/>
		    
        <TextView android:id="@+id/remote_queue_row_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Downloading"
            android:textColor="@color/black"
            android:textAppearance="@android:style/TextAppearance.Small"/>		    
    </LinearLayout>
    
    <View
        android:id="@+id/remote_queue_status_indicator"
        android:layout_width="4dp"
        android:layout_height="match_parent"/>
    
</LinearLayout>